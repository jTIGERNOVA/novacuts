<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/d1_barber_margin"
    android:background="@drawable/barber1"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/iconBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/d1_barber_icon_width"
            android:layout_height="@dimen/d1_barber_icon_width"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/appointment"
            android:padding="@dimen/d1_barber_highlight_margin"
            android:src="@drawable/user_default" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d1_barber_name_margin"
                android:gravity="center_horizontal"
                android:text="@string/na"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medium" />

        </LinearLayout>

        <TextView
            android:id="@+id/appTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="5:00 PM"
            android:textSize="@dimen/font_large" />

    </RelativeLayout>

</LinearLayout>
